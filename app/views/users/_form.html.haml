= form_for @user do |f|
  .row
    .span2
    .span6
      %table.table.table-bordered
        %tr
          %th= t('user.name')
          %td= f.text_field :name
        %tr
          %th= t('user.email')
          %td= f.text_field :email
        %tr
          %th= t('user.specs')
          %td= f.text_field :specs
  .row
    .span2
    .span6
      = f.submit t(:save), class: 'btn'